#wBox {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 100;
  text-align: left;
  display:none;
  border-radius: 6px;
  -moz-border-radius: 6px;
  -webkit-border-radius: 6px;
  width: 660px;
}

#wBox .wBox_popup {
  position: relative;
}

#wBox table {
  border-collapse: collapse;
  border-spacing: 0;
}

#wBox td {
  border-bottom: 0;
  padding: 0;
}

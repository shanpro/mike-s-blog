
//skin change================================

 $(function option_change(){
 	var $num = $("select#li_select option:selected").val();
  $("body").attr("id","skin" + $num);
 	$("#li_select option").removeAttr("selected");
 	$("#li_select option").eq($num - 1).attr("selected","selected");
 	document.cookie = "brand="+$num;
 	$("#li_select").change(option_change);
 })

//popup
popup=function(){
	var $mar_left = $('.popup_box').outerWidth();
	var $mar_top = $('.popup_box').outerHeight();
	$('.popup_box').css({'margin-left':-$mar_left/2 + 'px','margin-top':-$mar_top/2 + 'px'});

	$('.popup_box,.overlay').show();

	$('.overlay').click(function(){
		$(this).hide();
		$('.popup_box').hide();
	})
	$('.close_btn').click(function(){
		$('.popup_box').hide();
		$('.overlay').hide();
	})
}

$(function(){
	$('.clik_review').click(popup);
})
<%= render partial: "shared/header" %>
<div class="main">
  <div class="content">
    <div class="tab_content news group">
      <%= render partial: "left_nav" %>
      <div class="right_main">
        <div class="wizard">
          <span class="btn_operate"><a href="/news/new?brand=<%= params[:brand] %>">发表文章</a></span><a href="/news?section=news">新闻</a><%= raw news_nav(params[:brand]) %>
        </div>
        <table class="info_list" cellspacing="0" cellpadding="0">
          <tr>
            <th class="border_rl" width="10%">编号</th>
            <th width="10%">品牌</th>
            <th width="10%">所属栏目</th>
            <th width="25%">标题</th>
            <th width="10%">阅览数/回复</th>
            <th width="10%">发布时间</th>
            <th width="10%">发布人</th>
            <th class="border_rr" width="15%">操作</th>
          </tr>

          <%- @news.each do |one_news| %>
          <tr>
            <td><%= link_to one_news.id, news_path(one_news, :brand => one_news.brand_id) %></a></td>
            <td><%= link_to one_news.brand || "", news_path(one_news, :brand => one_news.brand_id) %></a></td>
            <td><%= one_news.section.try(:title) %></td>
            <td><%= link_to one_news.title, news_path(one_news, :brand => one_news.brand_id) %></a></td>
            <td><%= link_to "#{one_news.view_count}/#{one_news.comments.count}", news_topic_logs_path(one_news) %></td>
            <td><%= format_topic_time one_news.updated_at %></td>
            <td><%= one_news.user.try(:display_name) if one_news.user %></td>
            <td class="btn_operate">
              <%#= link_to_if(current_user.news, "编辑", edit_news_path(one_news)) %>
              <%= link_to "查看", news_path(one_news, :brand => one_news.brand_id, :viewed => true) %>
            </td>
          </tr>
          <%- end -%>
          <tr>
            <td class="page_bar btn_operate" colspan="8">
              每页显示
              <%= ssep_paginate(params[:per_page]) %>
              <%= paginate @news %>
            </td>
          </tr>
        </table>

      </div><!--right_main ends-->
      <div class="clear"></div>
    </div><!--news tab ends-->

  </div>
</div><!--main ends-->

<script type="text/javascript">
  $(function(){
    $("#will_paginate").change(function(){
      per_page = this.value;
      window.location.href="/news?seciton=news&per_page="+per_page;
    });
  });
</script>
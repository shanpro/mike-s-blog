<%= render partial: "shared/header"%>

<div class="main">
  <div class="content">
    <div class="tab_content news group">
      <%= render partial: "left_nav" %>
      <div class="right_main">
        <div class="wizard">
          <span class="btn_operate"><a href="/news/new?brand=<%= params[:brand] %>">发表文章</a></span><a href="/news?section=news">新闻</a><%= raw news_nav(params[:brand]) %>&nbsp;&gt;&nbsp;<%= @news.title %>
        </div>

        <h3 class="inner_tit"><span>发表人:<%= @news.user.try(:display_name) %></span><%= @news.title %></h3>

        <div class="inner_main">
          <div class="intr"><span>发布时间：<%= format_topic_time @news.updated_at %></span>品牌：<%= @news.brand %></div>
          <p class="inner_article"><%= @news.content %></p>
          <p>
            <a href="<%= @news.img %>" class="img_group" title="" rel="lightbox-tour"><%= image_tag @news.img.url(:normal) %></a>
            <!-- <img src="<%#= asset_path "hall_img.jpg" %>" alt="" /> -->
          </p>
          <div class="btn_review">
            <span class="btn_operate"><%= link_to "回复","javascript:void(0)",:class=>"clik_review" %><!-- <a class="clik_review" href="#">回复</a> --></span>
            <div class="clear"></div>
          </div>
        </div>

        <div class="review_area">
          <%= render partial: "shared/review", :collection => @news %>
        </div><!--review_area ends-->

      </div><!--right_main ends-->
      <div class="clear"></div>
    </div><!--news tab ends-->
  </div>
</div><!--main ends-->

<%= render partial: "shared/popreview" %>
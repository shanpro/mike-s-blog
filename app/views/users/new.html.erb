<%= render partial: "shared/settingheader" %>

<div class="main">
  <div class="content">
    <div class="tab_content news group">
      <div class="left_menu">
        <h2>版块设置</h2>
        <ul>
          <li><a href="#">兰芝</a></li>
          <li><a href="#">梦妆</a></li>
          <li><a href="#">雪花秀</a></li>
        </ul>
      </div><!--left_menu ends-->

      <div class="right_main">
        <div class="wizard">
          <span class="btn_operate"><a href="/settings_area/new">发表文章</a></span><a href="/settings_area">系统设置</a>&nbsp;&gt;&nbsp;版块设置&nbsp;&gt;&nbsp;新增版块
        </div>

        <form id="form_main">
          <div class="inner_form">
            <div class="review_txt"><label>标题：</label><input type="text"></div>
            <div class="review_txt"><label>描述：</label><textarea rows="10" cols="30"></textarea></div>
            <div class="review_txt">
              <label>父级版块：</label>
              <select>
                <option selected="selected">新闻</option>
                <option>梦妆</option>
                <option>雪花秀</option>
              </select>
            </div>

            <div class="review_txt">
              <label>选择模版：</label>
              <select>
                <option selected="selected">普通模版</option>
                <option>梦妆</option>
                <option>雪花秀</option>
              </select>
            </div>

            <div class="pos_checkbox"><input type="checkbox"><span>可见</span><input type="checkbox"><span>可推荐</span></div>
          </div>

          <div class="page_bar"><input type="button" value="保存" /><input type="button" value="关闭" /></div>
        </form>
      </div><!--right_main ends-->
      <div class="clear"></div>
    </div><!--news tab ends-->
  </div>
</div><!--main ends-->
<!DOCTYPE html>
<html>
  <head>
    <title>Ssep</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>

    <!--[if IE 6]>
    <script src="/png.js"></script>
    <script>
      PNG.fix('img,div,a,ul,li,a,input,h2');
    </script>
    <![endif]-->
  </head>
  <body id="skin<%= cookies["brand"] || current_user.brand_id %>">

    <%= yield %>
		<script type="text/javascript">
			window.buttonText = <%= I18n.t("calendar.buttonText").to_json.html_safe %>
      window.daynames = <%= I18n.t("calendar.daynames").to_json.html_safe %>
		</script>
    <%- if current_user.no_last_an? %>
      <script type="text/javascript">
        $(function(){
            wbox = $('<div id="ok"><%= j render "shared/wbox" %></div>').wBox({darget:false, title:"系统公告"})
            wbox.unbind()
            wbox.showBox()
            });
      </script>
    <% end %>
  </body>
</html>

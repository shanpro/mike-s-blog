<%= render partial: "shared/header" %>
<div class="main">
  <div class="content">
    <div class="tab_content news group">
      <div class="left_menu">
        <h2>产品及培训日历</h2>
        <ul>
          <li><a href="/calendars">培训日历</a></li>
          <li><a href="/products?section=9">产品论坛</a></li>
        </ul>
      </div><!--left_menu ends-->

      <div class="right_main">
        <div class="wizard">
          <span class="btn_operate"><a href="/products/new?section=<%= params[:section] %>">发表文章</a></span><a href="/calendars">产品及培训日历</a><%= ssep_nav(params[:section]) %>
        </div>

        <table class="info_list" cellspacing="0" cellpadding="0">
          <tr>
            <th class="border_rl" width="10%">编号</th>
            <th width="10%">品牌</th>
            <th width="10%">所属栏目</th>
            <th width="25%">标题</th>
            <th width="10%">阅览数/回复</th>
            <th width="10%">发布时间</th>
            <th width="10%">发布人</th>
            <th class="border_rr" width="15%">操作</th>
          </tr>

          <%- @products.each do |product| %>
          <tr>
            <td><%= link_to product.id, product_path(product) %></a></td>
            <td><%= link_to product.brand || "", product_path(product) %></a></td>
            <td><%= product.section.try(:title) %></td>
            <td><%= link_to product.title, product_path(product) %></a></td>
            <td><%= link_to "#{product.view_count}/#{product.comments.count}", product_topic_logs_path(product) %></td>
            <td><%= format_topic_time product.created_at %></td>
            <td><%= product.user.try(:display_name) if product.user %></td>
            <td class="btn_operate">
              <%#= link_to_if(current_user.news, "编辑", edit_product_path(product)) %>
              <%= link_to "查看", product_path(product, :viewed => true) %>
            </td>
          </tr>
          <%- end -%>
          <tr>
            <td class="page_bar btn_operate" colspan="8">
              每页显示
              <%= ssep_paginate(params[:per_page]) %>
              <%= paginate @products %>
            </td>
          </tr>
        </table>

      </div><!--right_main ends-->
      <div class="clear"></div>
    </div><!--news tab ends-->

  </div>
</div><!--main ends-->

<script type="text/javascript">
$(function(){
  $("#will_paginate").change(function(){
    per_page = this.value;
    window.location.href="/products?seciton=<%= params[:section] %>&per_page="+per_page;
  });
});
</script>

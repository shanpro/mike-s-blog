<%= render partial: "shared/header" %>
<div class="main">
  <div class="content">
    <div class="tab_content news group">
      <%= render partial: "shared/left_nav" %>
      <div class="right_main">
        <div class="wizard">
          <span class="btn_operate"><a href="/bp_cases/new">发表文章</a></span><a href="/bp_cases"><%= @section.title %></a>&nbsp;&gt;&nbsp;BP事例
        </div>

        <table class="info_list" cellspacing="0" cellpadding="0">
          <tr>
            <th class="border_rl" width="10%">编号</th>
            <th width="10%">品牌</th>
            <th width="10%">所属栏目</th>
            <th width="25%">标题</th>
            <th width="10%">阅览数/回复</th>
            <th width="10%">发布时间</th>
            <th width="10%">发布人</th>
            <th class="border_rr" width="15%">操作</th>
          </tr>
          <%- @bp_cases.each do |bp_case| %>
          <tr>
            <td><%= link_to bp_case.id, bp_cases_path(bp_case) %></a></td>
            <td><%= link_to bp_case.brand || "", bp_cases_path(bp_case) %></a></td>
            <td><%= bp_case.section.try(:title) %></td>
            <td><%= link_to bp_case.title, bp_cases_path(bp_case) %></a></td>
            <td><%= link_to "#{bp_case.view_count}/#{bp_case.comments.count}", "#" %></td>
            <td><%= format_topic_time bp_case.updated_at %></td>
            <td><%= bp_case.user.try(:display_name) %></td>
            <td class="btn_operate">
              <%= link_to_if(current_user.news, "编辑", edit_bp_case_path(bp_case)) %>
              <%= link_to "查看", bp_case_path(bp_case, :viewed => true) %>
            </td>
          </tr>
          <%- end -%>
          <tr>
            <td class="page_bar btn_operate" colspan="8">
              每页显示
              <%= ssep_paginate(params[:per_page]) %>
              <%= paginate @bp_cases %>
            </td>
          </tr>
        </table>

      </div><!--right_main ends-->
      <div class="clear"></div>
    </div><!--news tab ends-->

  </div>
</div><!--main ends-->

<script type="text/javascript">
  $(function(){
    $("#will_paginate").change(function(){
      per_page = this.value;
      window.location.href="/bp_cases?seciton=<%= params[:section] %>&per_page="+per_page;
    });
  });
</script>
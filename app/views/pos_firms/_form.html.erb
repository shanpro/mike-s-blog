<div class="inner_form">
  <%= f.hidden_field :status, value: 1 %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%#= f.hidden_field :category_id, value: 1 %>
  <div class="review_txt"><label>标题：</label><%= f.text_field :title %></div>
  <div class="review_txt"><label>内容：</label><%= f.text_area :content, :size => "10x10" %></div>
  <div class="review_txt"><label>品牌：</label>
    <%= f.select :brand_id, options_for_select(User::BRAND.invert, @pos_firm.brand_id) %>
  </div>
  <div class="review_txt"><label>区域：</label>
    <%= f.select :area_id, options_for_select(Area.roots.map{|area| [area.name, area.id]}, @pos_firm.area_id) %>
  </div>
</div>

<div class="page_bar">
  <%= f.submit "发布", class: "1"%>
  <%= f.submit "临时保存", class: "0"%>
  <%= f.submit "取消", class: "2" %>
</div>
<%= render partial: "shared/header"%>

<div class="main">
  <div class="content">
    <div class="tab_content news group">
      <%= render partial: "shared/left_nav" %>
      <div class="right_main">
        <div class="wizard">
          <span class="btn_operate"><a href="/<%= @section.eng_name %>/new?section=<%= params[:section] %>">发表文章</a></span><a href="/bas"><%= @section.title %></a><%= ssep_nav(params[:section]) %>&nbsp;&gt;&nbsp;<%= @ba.title %>
        </div>

        <h3 class="inner_tit"><span>发表人:<%= @ba.user.display_name if @ba.user %></span><%= @ba.title %></h3>

        <div class="inner_main">
          <div class="intr"><span>发布时间：<%= format_topic_time(@ba.created_at) %></span>品牌：<%= @ba.brand %></div>
          <p class="inner_article"><%= @ba.content %></p>
          <p>
            <%= show_img(@ba) %>
          </p>
          <div class="btn_review">
            <span class="btn_operate"><%= link_to "回复","javascript:void(0)",:class=>"clik_review" %></span>
            <div class="clear"></div>
          </div>
        </div>

        <div class="review_area">
          <%= render partial: "shared/review", locals: {resource: @ba} %>
        </div><!--review_area ends-->

      </div><!--right_main ends-->
      <div class="clear"></div>
    </div><!--news tab ends-->
  </div>
</div><!--main ends-->

<%= render partial: "shared/popreview", locals: {resource: @ba} %>